# ================================================
# POKEMON MICROSERVICES - CONFIGURACIÓN
# ================================================

# Entorno de ejecución
NODE_ENV=development

# ================================================
# PUERTOS DE SERVICIOS
# ================================================
PORT=3000
SEARCH_PORT=3001
STATS_API_PORT=3002
IMAGES_API_PORT=3003
POKE_API_PORT=3004

# ================================================
# URLS DE MICROSERVICIOS
# ================================================
# Para EJECUCIÓN LOCAL (usa estas por defecto)
SEARCH_API_URL=http://localhost:3001
STATS_API_URL=http://localhost:3002
IMAGES_API_URL=http://localhost:3003
POKE_API_URL=http://localhost:3004

# Para DOCKER COMPOSE (descomenta estas si usas Docker)
# SEARCH_API_URL=http://search-api:3001
# STATS_API_URL=http://stats-api:3002
# IMAGES_API_URL=http://images-api:3003
# POKE_API_URL=http://poke-api:3004

# ================================================
# CONFIGURACIÓN DE LOGS
# ================================================
LOG_LEVEL=info
LOG_DIR=./logs

# ================================================
# CONFIGURACIÓN DE CACHE
# ================================================
CACHE_TTL=300000

# ================================================
# CONFIGURACIÓN DE APIs EXTERNAS
# ================================================
POKEAPI_BASE_URL=https://pokeapi.co/api/v2
POKEAPI_TIMEOUT=10000

# ================================================
# CONFIGURACIÓN DE JMETER (opcional)
# ================================================
JMETER_USERS=50
JMETER_RAMP_UP=30
JMETER_DURATION=300
JMETER_BASE_URL=http://localhost:3000